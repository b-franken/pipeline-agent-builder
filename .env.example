# =============================================================================
# LLM Provider Configuration
# =============================================================================

# Provider: openai, anthropic, google, ollama
PROVIDER=openai

# Model name (provider-specific)
DEFAULT_MODEL=gpt-4o

# API Keys (set the one for your provider)
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=

# Ollama (for local LLM)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.2
OLLAMA_EMBED_MODEL=nomic-embed-text

# Embedding settings (for OpenAI embeddings)
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_TIMEOUT=30
EMBEDDING_MAX_RETRIES=3

# =============================================================================
# Database Configuration (Checkpointing)
# =============================================================================

# For local development (SQLite)
USE_POSTGRES=false
SQLITE_DB_PATH=./data/memory.db

# For Docker/Production (PostgreSQL)
# USE_POSTGRES=true
POSTGRES_URI=
# POSTGRES_URI=postgresql://agent:agent_secret@postgres:5432/agent_db
POSTGRES_PASSWORD=agent_secret

# =============================================================================
# Vector Memory (ChromaDB)
# =============================================================================

# For local development: leave empty (uses local persistence)
# For Docker: set to container name
# CHROMA_HOST=chroma
# CHROMA_PORT=8000

# =============================================================================
# Optional Services
# =============================================================================

# E2B Sandboxed Code Execution (https://e2b.dev)
E2B_API_KEY=

# Tavily Web Search (https://tavily.com)
TAVILY_API_KEY=

# =============================================================================
# Security
# =============================================================================

# Encryption key for API keys stored in database (Fernet format)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# If not set, a key will be auto-generated and saved to ./data/.encryption_key
ENCRYPTION_KEY=

# =============================================================================
# Logging
# =============================================================================

LOG_LEVEL=INFO
